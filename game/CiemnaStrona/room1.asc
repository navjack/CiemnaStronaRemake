function hExit1_AnyClick()
{
  if (Verbs.UsedAction(eGA_WalkTo))
  {
    SetBackgroundFrame(4);
    Wait(5);
    SetBackgroundFrame(1);
    Wait(5);
    SetBackgroundFrame(2);
    Wait(5);
    SetBackgroundFrame(3);
    Wait(5);
    SetBackgroundFrame(0);
    player.EnterRoom(2, 110, 100, eDirectionDown);
  }
}

